<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchedulerControl_WPF_API"
             xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler" x:Class="SchedulerControl_WPF_API.DisplayResultControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <dxsch:SchedulerControl x:Name="scheduler" ActiveViewType="FullWeek">
            <dxsch:SchedulerControl.FullWeekView>
                <dxsch:FullWeekView Enabled="True"/>
            </dxsch:SchedulerControl.FullWeekView>
            <dxsch:SchedulerControl.WeekView>
                <dxsch:WeekView Enabled="False"/>
            </dxsch:SchedulerControl.WeekView>
        </dxsch:SchedulerControl>

    </Grid>
</UserControl>
